{
  "$schema": "http://json-schema.org/schema",
  "id": "testSchematics",
  "title": "Test Option Schema",
  "description": "First schematics, generate a file",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "name",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": {
        "message": "Who do you want to greet?",
        "type": "list",
        "items": [
          {"value": "hilda", "label": "Hilda"},
          {"value": "clark", "label": "Clark"},
          {"value": "alan", "label": "Alan"}
        ]
      }
    }
  },
  "required": [
    "name"
  ]
}
